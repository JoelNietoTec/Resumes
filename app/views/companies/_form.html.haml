.col-lg-11.center-block
  = minimal_form_for(@company) do |f|
    = f.error_notification
    .company-form-container.col-lg-12
      .form-inputs
        .col-lg-9
          .col-lg-12
            = f.input :name, input_html: { class: 'input-lg', placeholder: 'Nombre de la Empresa' }, label: 'Nombre'
          .col-lg-6
            = f.association :industry, include_blank: false, input_html: { class: 'input-lg' }, label: 'Industria'
          .col-lg-6
            = f.association :company_type, include_blank: false, input_html: { class: 'input-lg' }, label: 'Tipo de Empresa'
        .col-sm-3.up-logo-container
          = f.input :logo, :as => :nice_logo
        .col-lg-12
          .col-lg-12
            = f.input :extract, as: :wysihtml5, input_html: { class: 'input-lg' }, label: 'Presentación', placeholder: 'Reseña sobre la empresa'
          .col-lg-6
            = f.association :country, collection: Country.order(:esp_name), include_blank: false, value_method: :id, label_method: :esp_title, selected: '169', input_html: { class: 'input-lg' }, label: 'País'
          .col-lg-6
            = f.input :contact_name, input_html: { class: 'input-lg', placeholder: 'Persona de Contacto' }, label: 'Nombre de Contacto'
          .col-lg-6
            = f.input :phones, input_html: { class: 'input-lg', placeholder: 'Teléfonos de Contacto' }, label: 'Teléfonos'
          .col-lg-6
            = f.input :website, input_html: { class: 'input-lg', placeholder: 'Web de la Empresa' }, label: 'Sitio Web'
          .col-lg-6
            = f.input :email, input_html: { class: 'input-lg', placeholder: 'Correo Electrónico' }, label: 'E-mail'
      .form-actions.col-lg-12
        .col-lg-12
          = f.button :submit, 'Guardar Cambios', class: 'btn-lg'
