:css
  body {
    background-image: url('/assets/Employee.jpg');
    background-repeat:no-repeat;
    background-size: cover;
.col-lg-6.center-block
  = minimal_form_for @user do |f|
    = f.error_notification
    #register-container
      %h1.text-warning.title-shadow.login-title Comparte tu talento
      %h3.text-info.title-shadow.login-title
        %i Encuentra oportunidades
      = f.hidden_field :role_id, :value => "2"
      = f.input :email, placeholder: 'E-mail', input_html: { class: 'input-lg' }
      = f.input :password,placeholder: 'Nueva Contraseña...', input_html: { class: 'input-lg' }
      = f.input :password_confirmation, placeholder: 'Confirmar contraseña...', input_html: { class: 'input-lg' }
      = f.button :submit, "Registrarse", class: 'btn-info btn-lg btn-block'
